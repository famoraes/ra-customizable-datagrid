{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "outDir": "./lib",
    "declaration": true,
    "target": "ESNext",
    "moduleResolution": "Node"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
